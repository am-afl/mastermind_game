{
    "schemes": [],
    "swagger": "2.0",
    "info": {
        "description": "This is the API documentation for the Mastermind game server.",
        "title": "Mastermind API",
        "contact": {},
        "version": "1.0"
    },
    "host": "https://mastermind.darkube.app",
    "basePath": "",
    "paths": {
        "/game": {
            "post": {
                "description": "This is the API documentation for the Mastermind game server.\nStarts a new Mastermind game and returns a game ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "game"
                ],
                "summary": "Create a new game",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/main.CreateGameResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/main.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/game/{gameID}": {
            "delete": {
                "description": "Deletes a game by its ID",
                "tags": [
                    "game"
                ],
                "summary": "Delete a game",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Game ID",
                        "name": "gameID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/main.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/main.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/guess": {
            "post": {
                "description": "Submit a guess for a specific game",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "game"
                ],
                "summary": "Make a guess",
                "parameters": [
                    {
                        "description": "Guess input",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/main.GuessRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/main.GuessResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/main.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/main.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "main.CreateGameResponse": {
            "type": "object",
            "properties": {
                "game_id": {
                    "type": "string"
                }
            }
        },
        "main.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "main.GuessRequest": {
            "type": "object",
            "properties": {
                "game_id": {
                    "type": "string"
                },
                "guess": {
                    "type": "string"
                }
            }
        },
        "main.GuessResponse": {
            "type": "object",
            "properties": {
                "black": {
                    "type": "integer"
                },
                "white": {
                    "type": "integer"
                }
            }
        }
    }
}